<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="./css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="./css/bootstrap-theme.min.css">

    <!-- Latest compiled and minified JavaScript -->
    <script href="./js/bootstrap.min.js"></script>
    <!--<script href="./javascript/nav-bar.js"></script>-->
    <script href='./js/nav-bar.js'></script>
    <link rel='stylesheet' href='./stylesheets/nav-bar.css'/>
    <link rel='stylesheet' href='./stylesheets/style.css'/>
    <script>
        $(document).ready(function () {
            $('.menu-close-icon').click(function (e) {
                e.preventDefault();
                $('#side-menu').animate({ left: '-250px', top: '-1000px' });
                $('#container').animate({width:'80%', marginLeft:'10%'});

            });
            $('.menu-open-icon').click(function (e) {
                e.preventDefault();
                $('#side-menu').animate({ left: '0px', top: '0px' });
//                $('#row').visible(false);
                $('#container').animate({width:'60%', marginLeft:'30%'});
            });
        });
    </script>
    <% include ../views/backtotop %>
</head>
<body>
<div id="side-menu" class="move-me">
    <hr class="hr-set"/>
    <span class="logo-text">SOFTER SOURCE   </span> <i class="menu-close-icon glyphicon glyphicon-align-justify"></i>
    <hr class="hr-set-two"/>

    <ul>
        <li>
            <a href="/"> <i class="glyphicon glyphicon-home"></i> Home</a>
        </li>
        <li>
            <a href="insert_store"> <i class="glyphicon glyphicon-th"></i>New Store</a>
        </li>
        <li>
            <a href="near"> <i class="glyphicon glyphicon-th"></i>Near</a>
        </li>
    </ul>
    <div class="intro-txt">
        <br/>
        <i><strong>Company Ovewview </strong></i>
        <hr/>
        <p>
            <a href="http://softersource.com/" target="_blank" style="text-decoration:none;color:#000">Softer
                Source </a>
        </p>

    </div>


</div>
<!-- SIDE MENU SECTION END-->

<div>
    <div class="row" id="row">
        <div class="col-md-6">
            <h1><strong> <i class="menu-open-icon glyphicon glyphicon-align-justify"></i> </strong></h1>
        </div>

    </div>
    <div class="container" id="container">


        <!--<p><a href="insertNewStore">New Store</a></p>-->

        <!--<p><a id="near" href="near">Near</a></p>-->

        <div class="row">
            <% var x = 1;
            store.forEach(function (s) {
            if(x == 4){ x = 1; %>
            <div class="item">

                <div class="well" style="text-align: justify;">
                    <img src="../images/<%=s.cover_image%>"
                         style="width: 3em;height: 3em; border-radius: 1em">
                    <a href="product?id=<%=s._id%>"><%= s.store_name%></a>
                    <br>
                    <br>
                    Địa chỉ :
                    <%= s.address%>
                    <br>
                    <br>
                    <%= s.description%>
                    <br>
                    <a href="edit_store?id=<%=s._id%>">Edit</a>
                </div>
            </div>
            <% }else{ x++; %>
            <div class="item">

                <div class="well" style="text-align: justify;">
                    <img src="../images/<%=s.cover_image%>"
                         style="width: 3em;height: 3em; border-radius: 1em">
                    <a href="product?id=<%=s._id%>"><%= s.store_name %></a>
                    <br>
                    <br>
                    Địa chỉ :
                    <%= s.address%>
                    <br>
                    <br>
                    <%= s.description%>
                    <br>
                    <a href="edit_store?id=<%=s._id%>">Edit</a>

                </div>
            </div>
            <% }}) %>
        </div>
    </div>
</div>
</body>
</html>